/**app.wxss**/
/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

/* 主题色 */
.text-primary { color: #4A90D9; }
.text-success { color: #07c160; }
.text-warning { color: #ff976a; }
.text-danger { color: #ee0a24; }
.text-gray { color: #999999; }
.text-dark { color: #333333; }

.bg-primary { background-color: #4A90D9; }
.bg-white { background-color: #ffffff; }
.bg-gray { background-color: #f5f5f5; }

/* 布局 */
.flex { display: flex; }
.flex-column { flex-direction: column; }
.flex-wrap { flex-wrap: wrap; }
.flex-1 { flex: 1; }
.items-center { align-items: center; }
.items-start { align-items: flex-start; }
.items-end { align-items: flex-end; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.justify-around { justify-content: space-around; }
.justify-end { justify-content: flex-end; }

/* 边距 */
.m-0 { margin: 0; }
.m-10 { margin: 20rpx; }
.m-20 { margin: 40rpx; }
.mt-10 { margin-top: 20rpx; }
.mt-20 { margin-top: 40rpx; }
.mb-10 { margin-bottom: 20rpx; }
.mb-20 { margin-bottom: 40rpx; }
.ml-10 { margin-left: 20rpx; }
.mr-10 { margin-right: 20rpx; }

.p-0 { padding: 0; }
.p-10 { padding: 20rpx; }
.p-20 { padding: 40rpx; }
.pt-10 { padding-top: 20rpx; }
.pb-10 { padding-bottom: 20rpx; }
.pl-10 { padding-left: 20rpx; }
.pr-10 { padding-right: 20rpx; }

/* 文字 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }
.text-sm { font-size: 24rpx; }
.text-md { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-xxl { font-size: 48rpx; }
.font-bold { font-weight: bold; }
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.text-ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 圆角 */
.rounded { border-radius: 8rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-full { border-radius: 50%; }

/* 阴影 */
.shadow {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 卡片 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 按钮 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-primary {
  background: linear-gradient(135deg, #4A90D9, #357ABD);
  color: #ffffff;
}

.btn-outline {
  background-color: #ffffff;
  color: #4A90D9;
  border: 2rpx solid #4A90D9;
}

.btn-success {
  background: linear-gradient(135deg, #07c160, #05a14a);
  color: #ffffff;
}

.btn-danger {
  background: linear-gradient(135deg, #ee0a24, #c00820);
  color: #ffffff;
}

.btn-gray {
  background-color: #f5f5f5;
  color: #666666;
}

.btn-disabled {
  opacity: 0.5;
}

/* 头像 */
.avatar-sm {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.avatar-md {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.avatar-lg {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #eeeeee;
  margin: 20rpx 0;
}

/* 标签 */
.tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx 16rpx;
  font-size: 22rpx;
  border-radius: 6rpx;
}

.tag-primary {
  background-color: rgba(74, 144, 217, 0.1);
  color: #4A90D9;
}

.tag-success {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.tag-warning {
  background-color: rgba(255, 151, 106, 0.1);
  color: #ff976a;
}

.tag-danger {
  background-color: rgba(238, 10, 36, 0.1);
  color: #ee0a24;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  color: #999999;
  font-size: 26rpx;
}

/* 固定底部 */
.fixed-bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* 安全区域 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 图标字体 - 使用 Unicode 字符作为简单图标 */
.icon-right::after { content: '›'; font-size: 36rpx; color: #cccccc; }
.icon-arrow::after { content: '→'; }
