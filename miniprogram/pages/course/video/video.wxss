/* pages/course/video/video.wxss */
.video-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 视频容器 */
.video-container {
  width: 100%;
  background-color: #000000;
}

.video-player {
  width: 100%;
  height: 422rpx;
}

/* 视频信息 */
.video-info {
  margin-top: 20rpx;
}

.video-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1.4;
}

.video-meta {
  display: flex;
  margin-top: 16rpx;
}

.meta-item {
  font-size: 26rpx;
  color: #999999;
  margin-right: 30rpx;
}

/* 章节区域 */
.chapter-section {
  margin-top: 20rpx;
  background-color: #ffffff;
}

.section-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.chapter-scroll {
  max-height: 600rpx;
}

.chapter-list {
  padding: 0 20rpx;
}

.chapter-item {
  border-bottom: 1rpx solid #f5f5f5;
}

.chapter-item:last-child {
  border-bottom: none;
}

.chapter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 10rpx;
}

.chapter-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.chapter-arrow {
  font-size: 32rpx;
  color: #cccccc;
  transition: transform 0.2s;
}

.chapter-arrow.expanded {
  transform: rotate(90deg);
}

/* 视频列表 */
.video-list {
  padding-left: 20rpx;
}

.video-item {
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #f8f8f8;
}

.video-item:last-child {
  border-bottom: none;
}

.video-item.playing {
  background-color: rgba(74, 144, 217, 0.05);
}

.video-item.playing .video-name {
  color: #4A90D9;
}

.video-status {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.status-icon {
  color: #4A90D9;
  font-size: 24rpx;
}

.status-index {
  font-size: 24rpx;
  color: #999999;
}

.video-name {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.video-duration {
  font-size: 24rpx;
  color: #999999;
  margin-left: 20rpx;
}

/* 底部导航按钮 */
.nav-buttons {
  display: flex;
  padding: 20rpx 30rpx;
  gap: 30rpx;
}

.nav-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 44rpx;
}

.prev-btn {
  background-color: #f5f5f5;
  color: #666666;
}

.next-btn {
  background: linear-gradient(135deg, #4A90D9, #357ABD);
  color: #ffffff;
}

.nav-btn[disabled] {
  opacity: 0.5;
}
