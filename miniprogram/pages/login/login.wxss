/* pages/login/login.wxss */
.login-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #4A90D9 0%, #357ABD 100%);
  padding: 0 60rpx;
}

/* Logo区域 */
.logo-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.app-name {
  font-size: 56rpx;
  font-weight: bold;
  color: #ffffff;
  margin-top: 40rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 16rpx;
}

/* 登录区域 */
.login-section {
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

.user-info-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-btn {
  background: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  border: none;
}

.avatar-btn::after {
  border: none;
}

.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
}

.nickname-input {
  margin-top: 30rpx;
  width: 100%;
  height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333333;
  border-bottom: 2rpx solid #eeeeee;
}

.nickname-text {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #4A90D9, #357ABD);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.login-btn::after {
  border: none;
}

.login-btn[loading] {
  opacity: 0.8;
}

/* 协议 */
.agreement {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}

.agreement-label {
  display: flex;
  align-items: flex-start;
}

.agreement-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
}

.link {
  color: #4A90D9;
}

/* 底部 */
.footer {
  padding: 40rpx 0;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}
