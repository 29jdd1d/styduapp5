/* pages/major/major.wxss */
.major-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.header {
  background: linear-gradient(135deg, #4A90D9, #357ABD);
  padding: 60rpx 40rpx;
  color: #ffffff;
}

.title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.8;
  margin-top: 16rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  margin: 20rpx;
  padding: 20rpx 30rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
}

/* 专业列表 */
.major-list {
  flex: 1;
  padding-bottom: 140rpx;
}

.category-section {
  margin: 20rpx;
}

.category-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 10rpx;
}

.category-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.category-count {
  font-size: 24rpx;
  color: #999999;
}

.major-items {
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.major-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.major-item:last-child {
  border-bottom: none;
}

.major-item.active {
  background-color: rgba(74, 144, 217, 0.05);
}

.major-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
}

.major-info {
  flex: 1;
  margin-left: 24rpx;
}

.major-name {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.major-code {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 确认按钮 */
.confirm-btn {
  width: 100%;
}

.confirm-btn[disabled] {
  background: #cccccc;
  color: #ffffff;
}
