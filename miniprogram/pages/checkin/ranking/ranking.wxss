/* pages/checkin/ranking/ranking.wxss */
.ranking-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* Tab栏 */
.tab-bar {
  display: flex;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666666;
  position: relative;
}

.tab-item.active {
  color: #4A90D9;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background-color: #4A90D9;
  border-radius: 3rpx;
}

/* 我的排名 */
.my-ranking {
  display: flex;
  align-items: center;
  margin: 20rpx;
  background: linear-gradient(135deg, #4A90D9, #357ABD);
  color: #ffffff;
}

.my-rank-num {
  font-size: 48rpx;
  font-weight: bold;
  width: 80rpx;
  text-align: center;
}

.my-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.my-info {
  flex: 1;
  margin-left: 20rpx;
}

.my-nickname {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
}

.my-days {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 4rpx;
}

.my-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 排行榜列表 */
.ranking-list {
  flex: 1;
  padding: 0 20rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.ranking-item.top-1 {
  background: linear-gradient(135deg, #FFD700, #FFC107);
}

.ranking-item.top-2 {
  background: linear-gradient(135deg, #C0C0C0, #A8A8A8);
}

.ranking-item.top-3 {
  background: linear-gradient(135deg, #CD7F32, #B8860B);
}

.ranking-item.top-1,
.ranking-item.top-2,
.ranking-item.top-3 {
  color: #ffffff;
}

.rank-num {
  width: 60rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #999999;
}

.ranking-item.top-1 .rank-num,
.ranking-item.top-2 .rank-num,
.ranking-item.top-3 .rank-num {
  color: #ffffff;
}

.medal {
  font-size: 40rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 16rpx;
}

.user-info {
  flex: 1;
  margin-left: 20rpx;
}

.user-nickname {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.ranking-item.top-1 .user-nickname,
.ranking-item.top-2 .user-nickname,
.ranking-item.top-3 .user-nickname {
  color: #ffffff;
}

.user-major {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}

.ranking-item.top-1 .user-major,
.ranking-item.top-2 .user-major,
.ranking-item.top-3 .user-major {
  color: rgba(255, 255, 255, 0.8);
}

.rank-days {
  display: flex;
  align-items: baseline;
}

.days-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #4A90D9;
}

.ranking-item.top-1 .days-num,
.ranking-item.top-2 .days-num,
.ranking-item.top-3 .days-num {
  color: #ffffff;
}

.days-unit {
  font-size: 24rpx;
  color: #999999;
  margin-left: 4rpx;
}

.ranking-item.top-1 .days-unit,
.ranking-item.top-2 .days-unit,
.ranking-item.top-3 .days-unit {
  color: rgba(255, 255, 255, 0.8);
}
