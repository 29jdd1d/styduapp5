/* pages/mine/mine.wxss */
.mine-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  position: relative;
  margin-bottom: 20rpx;
}

.user-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 240rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 40rpx 40rpx;
}

.user-content {
  position: relative;
  display: flex;
  align-items: center;
  padding: 60rpx 30rpx 40rpx;
}

.user-content.login-tip {
  flex-direction: column;
  justify-content: center;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.user-info {
  flex: 1;
  margin-left: 30rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  display: block;
  margin-bottom: 12rpx;
}

.user-major {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.major-icon {
  font-size: 24rpx;
}

.major-name {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.edit-btn {
  padding: 14rpx 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.edit-btn text {
  font-size: 26rpx;
  color: #fff;
}

.login-text {
  font-size: 32rpx;
  color: #fff;
  margin-top: 20rpx;
}

/* 学习数据 */
.stats-card {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stats-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.stat-num {
  font-size: 40rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 功能菜单 */
.menu-card {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-badge {
  padding: 4rpx 16rpx;
  background: #ff4757;
  color: #fff;
  font-size: 22rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
}

.menu-sub {
  font-size: 26rpx;
  color: #999;
  margin-right: 16rpx;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 退出登录 */
.logout-btn {
  margin: 40rpx 20rpx;
  height: 88rpx;
  background: #fff;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #f44336;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
