/* pages/question/result/result.wxss */
.result-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #4A90D9 0%, #357ABD 50%, #f5f5f5 50%);
  padding: 60rpx 30rpx;
}

.result-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.result-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

/* 得分展示 */
.score-section {
  margin: 50rpx 0;
}

.score-circle {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.score-value {
  font-size: 120rpx;
  font-weight: bold;
  color: #4A90D9;
}

.score-unit {
  font-size: 40rpx;
  color: #4A90D9;
  margin-left: 8rpx;
}

.score-label {
  font-size: 28rpx;
  color: #999999;
  margin-top: 16rpx;
}

/* 统计数据 */
.stats-row {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-item .stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.stat-item .stat-value.correct {
  color: #07c160;
}

.stat-item .stat-value.wrong {
  color: #ee0a24;
}

.stat-item .stat-label {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 操作按钮 */
.action-section {
  margin-top: 40rpx;
}

.action-section .btn {
  margin-bottom: 24rpx;
}

/* 鼓励语 */
.encourage-text {
  text-align: center;
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.encourage-text text {
  font-size: 26rpx;
  color: #999999;
  line-height: 1.8;
}
