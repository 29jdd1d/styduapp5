/* pages/index/index.wxss */
.index-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 顶部区域 */
.header-section {
  background: linear-gradient(135deg, #4A90D9, #357ABD);
  padding: 40rpx 30rpx;
  padding-top: calc(40rpx + env(safe-area-inset-top));
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.info {
  margin-left: 24rpx;
}

.nickname {
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
}

.major {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

/* 倒计时 */
.countdown-box {
  text-align: center;
}

.countdown-label {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.countdown-num {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-top: 8rpx;
}

.countdown-num .num {
  font-size: 56rpx;
  font-weight: bold;
  color: #ffffff;
}

.countdown-num .unit {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 8rpx;
}

/* 学习统计 */
.stats-card {
  display: flex;
  align-items: center;
  margin-top: -30rpx;
  position: relative;
  z-index: 10;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-num {
  font-size: 44rpx;
  font-weight: bold;
  color: #4A90D9;
}

.stats-label {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: #eeeeee;
}

/* 打卡卡片 */
.checkin-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.checkin-left {
  display: flex;
  align-items: center;
}

.checkin-icon {
  width: 80rpx;
  height: 80rpx;
}

.checkin-info {
  margin-left: 24rpx;
}

.checkin-title {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.checkin-desc {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

.checkin-btn {
  padding: 16rpx 36rpx;
  background: linear-gradient(135deg, #4A90D9, #357ABD);
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 30rpx;
}

.checkin-btn.done {
  background: #f0f0f0;
  color: #999999;
}

/* 快捷入口 */
.quick-entry {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.entry-icon-wrap {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.entry-icon-wrap.bg-blue { background: linear-gradient(135deg, #4A90D9, #357ABD); }
.entry-icon-wrap.bg-green { background: linear-gradient(135deg, #07c160, #05a14a); }
.entry-icon-wrap.bg-orange { background: linear-gradient(135deg, #ff976a, #f56c6c); }
.entry-icon-wrap.bg-red { background: linear-gradient(135deg, #ee0a24, #c00820); }

.entry-icon {
  width: 50rpx;
  height: 50rpx;
}

.entry-text {
  font-size: 24rpx;
  color: #666666;
  margin-top: 16rpx;
}

/* 区块 */
.section {
  margin-top: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.section-more {
  font-size: 26rpx;
  color: #999999;
}

/* 课程滚动 */
.course-scroll {
  white-space: nowrap;
}

.course-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.course-item {
  display: inline-block;
  width: 320rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 0 10rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.course-cover {
  width: 100%;
  height: 180rpx;
}

.course-info {
  padding: 20rpx;
  white-space: normal;
}

.course-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.course-teacher {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

.course-meta {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
}

.course-count,
.course-views {
  font-size: 22rpx;
  color: #cccccc;
}

.empty-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
}

.placeholder-text {
  color: #999999;
  font-size: 26rpx;
}

/* 帖子列表 */
.post-list {
  padding: 0 20rpx;
}

.post-item {
  margin-bottom: 20rpx;
}

.post-header {
  display: flex;
  align-items: center;
}

.post-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.post-user {
  flex: 1;
  margin-left: 16rpx;
}

.post-nickname {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.post-time {
  display: block;
  font-size: 22rpx;
  color: #cccccc;
  margin-top: 4rpx;
}

.post-type-tag {
  padding: 6rpx 16rpx;
  background-color: rgba(74, 144, 217, 0.1);
  color: #4A90D9;
  font-size: 22rpx;
  border-radius: 6rpx;
}

.post-title {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-top: 20rpx;
}

.post-content {
  display: block;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-top: 12rpx;
}

.post-footer {
  display: flex;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.post-stat {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 24rpx;
  color: #999999;
}

.post-stat text:first-child {
  margin-right: 8rpx;
}
