/* pages/exam/doing/doing.wxss */
.doing-page {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 顶部计时器 */
.timer-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.timer-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.timer-label {
  font-size: 26rpx;
  color: #666;
}

.timer-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  font-family: monospace;
}

.timer-value.warning {
  color: #f44336;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.progress-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

/* 答题区域 */
.question-swiper {
  flex: 1;
  height: 0;
}

.question-scroll {
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.question-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  min-height: calc(100% - 40rpx);
  box-sizing: border-box;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.question-type {
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 24rpx;
  border-radius: 20rpx;
}

.question-score {
  font-size: 26rpx;
  color: #ff9800;
  font-weight: 500;
}

.question-content {
  margin-bottom: 24rpx;
}

.question-index {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.question-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

.question-image {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

/* 选项 */
.options-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.option-item.selected {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-color: #667eea;
}

.option-key {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.option-item.selected .option-key {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.option-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  flex: 1;
}

/* 判断题 */
.judge-list {
  display: flex;
  gap: 30rpx;
}

.judge-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  background: #f8f8f8;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.judge-item.selected {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-color: #667eea;
}

.judge-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.judge-item:first-child .judge-icon {
  color: #4caf50;
}

.judge-item:last-child .judge-icon {
  color: #f44336;
}

.judge-text {
  font-size: 28rpx;
  color: #333;
}

/* 输入区域 */
.input-area {
  margin-top: 20rpx;
}

.answer-input {
  width: 100%;
  min-height: 200rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

/* 底部导航 */
.bottom-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #eee;
}

.nav-btn {
  padding: 20rpx 50rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.nav-btn.disabled {
  opacity: 0.5;
}

.nav-btn.submit {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.card-btn {
  padding: 20rpx 40rpx;
  background: #fff;
  border: 2rpx solid #667eea;
  color: #667eea;
  font-size: 28rpx;
  border-radius: 30rpx;
}

/* 答题卡弹窗 */
.answer-card-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.answer-card-popup {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
  z-index: 101;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.answer-card-popup.show {
  transform: translateY(0);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.card-stats {
  display: flex;
  justify-content: center;
  gap: 80rpx;
  padding: 30rpx;
}

.card-stats .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-stats .stat-num {
  font-size: 40rpx;
  font-weight: 600;
  color: #667eea;
}

.card-stats .stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.card-grid-scroll {
  flex: 1;
  padding: 0 30rpx;
}

.card-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding-bottom: 20rpx;
}

.card-item {
  width: calc(20% - 13rpx);
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  border: 2rpx solid transparent;
}

.card-item.answered {
  background: #e8f5e9;
  color: #4caf50;
}

.card-item.current {
  border-color: #667eea;
}

.popup-footer {
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #eee;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
