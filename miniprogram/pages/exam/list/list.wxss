/* pages/exam/list/list.wxss */
.exam-page {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 顶部统计 */
.stats-header {
  position: relative;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.stats-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 40rpx 40rpx;
}

.stats-content {
  position: relative;
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 30rpx 0;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-num {
  font-size: 48rpx;
  font-weight: 600;
  color: #fff;
}

.stats-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  align-self: center;
}

/* 标签筛选 */
.tab-bar {
  display: flex;
  background: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #667eea;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

/* 考试列表 */
.exam-list {
  flex: 1;
  padding: 20rpx;
}

.exam-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.exam-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.exam-title {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  margin-right: 20rpx;
}

.exam-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  flex-shrink: 0;
}

.exam-status.status-pending {
  background: #e3f2fd;
  color: #2196f3;
}

.exam-status.status-doing {
  background: #fff3e0;
  color: #ff9800;
}

.exam-status.status-completed {
  background: #e8f5e9;
  color: #4caf50;
}

.exam-status.status-ended {
  background: #f5f5f5;
  color: #999;
}

.exam-status.status-notstart {
  background: #fce4ec;
  color: #e91e63;
}

/* 考试信息 */
.exam-info {
  display: flex;
  gap: 30rpx;
  margin-bottom: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-icon {
  font-size: 24rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
}

/* 考试时间 */
.exam-time {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 16rpx;
}

.time-label {
  font-size: 26rpx;
  color: #999;
}

.time-value {
  font-size: 26rpx;
  color: #666;
}

/* 考试结果 */
.exam-result {
  display: flex;
  justify-content: space-around;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.result-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.result-score {
  font-size: 36rpx;
  font-weight: 600;
}

.result-score.pass {
  color: #4caf50;
}

.result-score.fail {
  color: #f44336;
}

.result-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 操作按钮 */
.exam-action {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  padding: 16rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.action-btn.disabled {
  background: #eee;
  color: #999;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #999;
}
