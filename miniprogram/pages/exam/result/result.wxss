/* pages/exam/result/result.wxss */
.result-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 成绩卡片 */
.score-card {
  position: relative;
  margin: 0 20rpx 20rpx;
  padding-top: 20rpx;
}

.score-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 40rpx 40rpx;
}

.score-content {
  position: relative;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.score-circle.pass {
  background: linear-gradient(135deg, #4caf50 0%, #8bc34a 100%);
}

.score-circle.fail {
  background: linear-gradient(135deg, #ff9800 0%, #ffc107 100%);
}

.score-num {
  font-size: 72rpx;
  font-weight: 700;
  color: #fff;
}

.score-unit {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.score-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 30rpx;
}

.status-icon {
  font-size: 40rpx;
}

.status-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.score-detail {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detail-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 答题统计 */
.stats-section {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  border-radius: 16rpx;
}

.stat-card.correct {
  background: #e8f5e9;
}

.stat-card.wrong {
  background: #ffebee;
}

.stat-card.unanswered {
  background: #fff3e0;
}

.stat-card.rate {
  background: #e3f2fd;
}

.stat-card .stat-num {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-card.correct .stat-num {
  color: #4caf50;
}

.stat-card.wrong .stat-num {
  color: #f44336;
}

.stat-card.unanswered .stat-num {
  color: #ff9800;
}

.stat-card.rate .stat-num {
  color: #2196f3;
}

.stat-card .stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 题目详情 */
.detail-section {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
}

.filter-tabs {
  display: flex;
  gap: 20rpx;
}

.filter-tab {
  font-size: 26rpx;
  color: #999;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.question-list {
  display: flex;
  flex-direction: column;
}

.question-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.question-item:last-child {
  border-bottom: none;
}

.question-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.question-num {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.question-type {
  font-size: 22rpx;
  color: #667eea;
  padding: 4rpx 12rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
}

.question-status {
  font-size: 24rpx;
  margin-left: auto;
}

.question-status.correct {
  color: #4caf50;
}

.question-status.wrong {
  color: #f44336;
}

.question-brief {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.question-detail {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.option-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.option-item.correct {
  background: #e8f5e9;
  border-color: #4caf50;
}

.option-item.wrong {
  background: #ffebee;
  border-color: #f44336;
}

.option-key {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.option-item.correct .option-key {
  background: #4caf50;
  color: #fff;
}

.option-item.wrong .option-key {
  background: #f44336;
  color: #fff;
}

.option-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.answer-info {
  margin-bottom: 16rpx;
}

.answer-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.answer-label {
  font-size: 26rpx;
  color: #666;
}

.answer-value {
  font-size: 26rpx;
  font-weight: 500;
}

.answer-value.correct {
  color: #4caf50;
}

.answer-value.wrong {
  color: #f44336;
}

.analysis {
  padding-top: 16rpx;
  border-top: 1rpx dashed #ddd;
}

.analysis-label {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

.analysis-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

.expand-icon {
  text-align: center;
  font-size: 24rpx;
  color: #667eea;
  margin-top: 12rpx;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-top: 1rpx solid #eee;
}

.btn-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  border-radius: 44rpx;
}

.btn-item.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}
