<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studyapp.practice.mapper.UserWrongQuestionMapper">

    <select id="selectWrongQuestionIds" resultType="java.lang.Long">
        SELECT question_id FROM user_wrong_question
        WHERE user_id = #{userId} AND is_removed = 0
        ORDER BY last_wrong_time DESC
        <if test="limit != null">
            LIMIT #{limit}
        </if>
    </select>

</mapper>
